<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE tiles-definitions PUBLIC  
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">  
        
<tiles-definitions>  
 
    <!-- Base Define -->
    <definition name="authLayout" 
                template="/WEB-INF/layouts/auth/auth.jsp">
        <put-attribute name="title" value="" />  
        <put-attribute name="header" value="/WEB-INF/layouts/auth/authHeader.jsp" />  
        <put-attribute name="footer" value="/WEB-INF/views/footer.jsp" />
    </definition>
    <definition name="signup" 
                extends="authLayout">  
        <put-attribute name="title" value="Sign Up" />  
        <put-attribute name="body" value="/WEB-INF/layouts/auth/signUp.jsp" />
    </definition>
    <definition name="login" 
                extends="authLayout">  
        <put-attribute name="title" value="Sign Up" />  
        <put-attribute name="body" value="/WEB-INF/layouts/auth/login.jsp" />
    </definition>      
 
   
  
</tiles-definitions> 